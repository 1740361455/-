#include <stdio.h>
void menu()
{
	printf("**************************\n");
	printf("**1.开始游戏**0.退出游戏**\n");
	printf("**************************\n");
}
void initboard(char board[3][3],int row,int col)
{
	int i,j;
	for(i=0;i<row;i++)
	{
		for(j=0;j<col;j++)
		board[i][j]=' ';
	}
}
void displayboard(char board[3][3],int row,int col)
{
	int i,j;
	for(i=0;i<row;i++)
	{
		for(j=0;j<col;j++)
		{
			printf(" %c ",board[i][j]);
			if(j<col-1)
			printf("|");
			else
			printf("\n");
		}
		if(i<row-1)
		{
			for(j=0;j<col;j++)
			{
			printf("---");
			if(j<col-1)
			printf("|");
			else
			printf("\n");
			}	
		}
	}
}
void playermove(char board[3][3],int row,int col)
{
	int x,y;
	printf("玩家1落子：\n");
	while(1)
	{
		scanf("%d%d",&x,&y);
		if(x>=1&&x<=3&&y>=1&&y<=3)
		{
		if(board[x-1][y-1]==' ')
		{
			board[x-1][y-1]='*';
			break;
		}
	
		else
		printf("位置不为空，请重新输入！\n");
		}
		else
		printf("位置非法，请重新输入！\n");
	}
}
void computermove(char board[3][3],int row,int col)
{
	int x,y;
	printf("玩家2落子：\n");
	while(1)
	{
		scanf("%d%d",&x,&y);
		if(x>=1&&x<=3&&y>=1&&y<=3)
		{
		if(board[x-1][y-1]==' ')
		{
			board[x-1][y-1]='#';
			break;
		}
	
		else
		printf("位置不为空，请重新输入！\n");
		}
		else
		printf("位置非法，请重新输入！\n");
	}
}
int full(char board[3][3],int row,int col)
{
	int i,j;
	for(i=0;i<row;i++)
	{
		for(j=0;j<col;j++)
		{
			if(board[i][j]==' ')
			return 0;
		}
	}
	return 1;
}
char win(char board[3][3],int row,int col)
{
	int i;
	for(i=0;i<row;i++)
	{
		if(board[i][0]==board[i][1]&&board[i][1]==board[i][2]&&board[i][0]!=' ')
		return board[i][0];
	}
	for(i=0;i<col;i++)
	{
		if(board[0][i]==board[1][i]&&board[1][i]==board[2][i]&&board[0][i]!=' ')
		return board[0][i];
	}
	if(board[0][0]==board[1][1]&&board[1][1]==board[2][2]&&board[0][0]!=' ')
	return board[0][0];
	if(board[2][0]==board[1][1]&&board[1][1]==board[0][2]&&board[2][0]!=' ')
	return board[2][0];
	if(1==full(board,row,col))
	return 'b';
	return 'a';
}
void game()
{
	char state;
	const int row=3,col=3;
	char board[row][col]={0};
	initboard(board,row,col);
	displayboard(board,row,col);
	while(1)
	{
		playermove(board,row,col);
		displayboard(board,row,col);
		state=win(board,row,col);
		if(state!='a')
		break;
		computermove(board,row,col);
		displayboard(board,row,col);
		state=win(board,row,col);
		if(state!='a')
		break;
	}
	if(state=='*')
	printf("玩家1获胜！\n");
	else if(state=='#')
	printf("玩家2获胜！\n");
	else
	printf("平局！\n"); 
}
void test()
{
	int choose;
	do
	{
	menu();
	scanf("%d",&choose);
	switch(choose)
	{
		case 1:
		game();
		break;
		case 0:
		printf("退出游戏\n");
		break;
		default:
		printf("选择错误，请重试！\n");
		break;
	}	
	}
	while(choose);
}

int main()
{
	test();
	return 0;
} 
