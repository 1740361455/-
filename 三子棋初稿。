#include <stdio.h>
void menu()
{
	printf("**************************\n");
	printf("**1.开始游戏**0.退出游戏**\n");
	printf("**************************\n");
}
void initboard(char board[3][3],int row,int col)
{
	int i,j;
	for(i=0;i<row;i++)
	{
		for(j=0;j<col;j++)
		board[i][j]=' ';
	}
}
void displayboard(char board[3][3],int row,int col)
{
	int i;
	for(i=0;i<row;i++)
	{
		printf(" %c | %c | %c \n",board[i][0],board[i][1],board[i][2]);
		if(i<row-1)
		printf("---|---|---\n");
	}
} 
void game()
{
	const int row=3,col=3;
	char board[row][col]={0};
	initboard(board,row,col);
	displayboard(board,row,col);
}
void choose()
{
	int num;
	do
	{
	menu();
	scanf("%d",&num);
	switch(num)
	{
		case 1:
		game();
		break;
		case 0:
		printf("退出游戏\n");
		break;
		default:
		printf("选择错误，请重试！\n");
		break;
	}	
	}
	while(num);
}

int main()
{
	choose();
	return 0;
} 
